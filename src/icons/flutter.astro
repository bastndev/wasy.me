---
import { Icon } from "./Tech";
---

<div class="tec">
  <a class="flutter" href="/astro/" transition:name="FlutterIcon">
    <Icon.Flutter className="w-4" />
  </a>
</div>

<style>
  .tec {
    display: flex;
    flex-direction: column;
    align-items: end;
    width: 100px;
    height: 300px;
    margin-top: 2.8rem;
  }
  .flutter {
    margin: 0 10px;
    padding: 10px;
    border: 1px solid rgb(33, 33, 33);
    border-radius: 8px;
    transition:
      transform 0.5s ease,
      box-shadow 0.5s ease;
    margin-bottom: 2rem;
    background: black;
    transform: translateY(-5px);
    border: none;
    box-shadow: 0 10px 20px var(--color-primary);
  }
</style>
