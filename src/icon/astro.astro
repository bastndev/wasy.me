---
import { Icons } from "./icons";
---

<a class="astro" href="/astro">
    <Icons.Astro className="w-5" />
</a>

<style>
    .astro {
        margin: 0 10px;
        padding: 5px;
        border: 1px solid rgb(33, 33, 33);
        border-radius: 8px;
        transition:
            transform 0.5s ease,
            box-shadow 0.5s ease;
        margin-bottom: 2rem;
    }
    .astro:hover {
        transform: translateY(-5px);
        border: none;
        box-shadow: 0 10px 20px rgba(255, 68, 0, 0.6);
    }
</style>
