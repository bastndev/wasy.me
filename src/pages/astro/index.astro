---
import Layout from "@/layouts/Layout.astro";
import Search from "@/components/Search.astro";
import SelectTecAstro from "@/components/SelectTecAstro.astro";
import Header from "@/components/Header.astro";
import { Icons } from "@/icon/icons";
import { Light } from "@/components/layout/Light";
import Goble from "@/icon/goble.astro";
---

<Layout title="wasy.me">
    <Light.Astro />
    <Header>
        <div class="container-logo">
            <a class="w" href="/">
                <Goble />
            </a>
            <div class="tec">
                <a class="astro" href="/astro">
                    <Icons.Astro className="w-5" />
                </a>
            </div>
        </div>
    </Header>
    <!-- --- --- --- -- Search  -->
    <Search />
    <!-- --- --- --- -- Selection  -->
    <SelectTecAstro />

    <h1 class="dark:text-white">Astro Page</h1>
</Layout>
<style>
    .container-logo {
        display: flex;
        justify-content: center;
        align-items: center;
        margin: 1.5rem 0 4rem 0;
        /* background-color: red; */
    }
    .w {
        width: 100%;
        background-color: red;
    }
    .tec {

        /* background-color: blue; */
        display: flex;
        flex-direction: column;
        align-items: start;
        width: 100px;
        height: 300px;
        
        /* margin-top: 0rem; */
        /* margin-right: 2rem; */
    }
    .astro {
        margin: 0 10px;
        padding: 9px;
        border: 1px solid rgb(33, 33, 33);
        border-radius: 8px;
        transition:
            transform 0.5s ease,
            box-shadow 0.5s ease;
        margin-bottom: 2rem;
        transform: translateY(-5px);
        border: none;
        box-shadow: 0 10px 20px rgba(255, 68, 0, 0.6);
        background: black;
    }
    /* .astro:hover {
        transform: translateY(-5px);
        border: none;
        box-shadow: 0 10px 20px rgba(255, 68, 0, 0.6);
    } */
</style>
