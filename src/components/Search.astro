---
import { Icon } from "@/icons/Ui";
---

<div class="search-container">
  <input
    type="text"
    class="search-input"
    placeholder="Search"
    aria-label="Search"
    oninput="handleSearch()"
    spellcheck="false"
  />
  <button class="search-button" aria-label="Search" onclick="handleSearch()">
    <Icon.Flare />
  </button>
</div>

<!-- MARK: Style -->
<style>
  .search-container {
    position: relative;
    width: 100%;
    max-width: 500px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    background-color: #2c2c2c;
    border-radius: 10px;
    padding: 2px;
    margin-bottom: 2rem;
  }

  .search-input {
    flex: 1;
    padding: 10px 20px;
    border-radius: 10px 0 0 10px;
    background-color: #000000;
    color: white;
    font-size: 16px;
    outline: none;
    transition: box-shadow 0.3s ease;
  }

  .search-input::placeholder {
    color: #999999;
  }

  .search-button {
    background-color: #000000;
    border: none;
    color: #747474;
    padding: 10px;
    border-radius: 0 10px 10px 0;
    cursor: pointer;
    transition:
      background-color 0.3s ease,
      color 0.3s ease;
  }

  .search-button:hover {
    color: #ffffff;
  }
</style>

<!-- MARK: script -->
<script>
  function handleSearch() {
    const searchInput = document.querySelector(".search-input");
    const query = searchInput ? (searchInput as HTMLInputElement).value : "";
    console.log("Searching for:", query);
