---
import { Icon } from "@/icons/Tech";
---

<div class="responsive-tec">
  <a class="flutter" href="/flutter" transition:name="FlutterIcon">
    <Icon.Flutter className="w-4" />
  </a>
  <a class="astro" href="/astro" transition:name="AstroIcon">
    <Icon.Astro className="w-5" />
  </a>
</div>

<!-- MARK: Style -->
<style>
  .responsive-tec {
    display: none;
  }

  @media (max-width: 768px) {
    .responsive-tec {
      display: flex;
    }
  }

  .flutter {
    margin: 0 10px;
    padding: 10px;
    padding-left: 2.5rem;
    padding-right: 2.5rem;
    border: 1px solid rgb(33, 33, 33);
    border-radius: 8px;
    transition:
      transform 0.5s ease,
      box-shadow 0.5s ease;
    margin-bottom: 2rem;
    background: black;
  }
  .flutter:hover {
    transform: translateY(-5px);
    border: none;
    box-shadow: 0 10px 20px rgba(0, 123, 255, 0.6);
  }
  .astro {
    margin: 0 10px;
    padding: 10px;
    padding-left: 2.5rem;
    padding-right: 2.5rem;
    border: 1px solid rgb(33, 33, 33);
    border-radius: 8px;
    transition:
      transform 0.5s ease,
      box-shadow 0.5s ease;
    margin-bottom: 2rem;
    background: black;
  }
  .astro:hover {
    transform: translateY(-5px);
    border: none;
    box-shadow: 0 10px 20px rgba(255, 68, 0, 0.6);
  }
</style>
