    </div>
    <div id="delayed-text" class="hidden">
        <p class="dark:text-white">Select one <span>Tec</span></p>
    </div>
</section>

<style>
    .contaier {
        display: flex;
        flex-direction: column;
        align-items: center;
        height: 700px;
    }

    span {
        background-color: rgb(255, 255, 255);
        border-radius: 5px;
        padding: 2px 10px;
        border: 1px solid #191919;
        color: rgb(0, 0, 0);
    }

    .mb-4 {
        position: relative;
        text-transform: uppercase;
        overflow: hidden;
        background: linear-gradient(90deg, #000, #fff, #000);
        background-repeat: no-repeat;
        background-size: 80%;
        animation: animate 3s linear 1 forwards; 
        -webkit-background-clip: text;
        -webkit-text-fill-color: rgba(255, 255, 255, 0);
    }
    .mb-4 a {
        margin-right: 4rem;
        font-size: 1.3rem;
    }

    .mb-4 a:hover {
        color: var(--color-primary);
    }

    a {
        color: rgba(255, 255, 255, 0);
        text-decoration: none;
        margin-right: 20px;
    }

    .hidden {
        display: none;
    }

    .visible {
        display: block;
    }

    @keyframes animate {
        0% {
            background-position: -500%;
        }
        100% {
            background-position: 500%;
            background-size: 100%; 
        }
    }
</style>

<script>
    setTimeout(() => {
        const delayedText = document.getElementById('delayed-text');
        if (delayedText) {
            delayedText.classList.remove('hidden');
            delayedText.classList.add('visible');
        }

        // Cambiar el color del texto a visible después de la animación
        const mbElement = document.querySelector('.mb-4');
        if (mbElement) {
            (mbElement as HTMLElement).style.webkitTextFillColor = 'rgba(255, 255, 255, 1)'; // Cambiar a blanco
        }
    }, 3700);
</script>
