<!-- MARK: Style -->
<style>
  .buyme {
    display: flex;
    align-items: center;
    border: 1px solid #1e1e1e;
    background: #0d0d0d66;
    padding: 2rem;
    border-radius: 20px;
    transition: all 0.5s ease;
  }
  .buyme:hover {
    border: 1px solid #ffe600a8;
  }
  .buyme p {
    margin-right: 1rem;
  }
  .buyme img {
    filter: grayscale(100%);
    transition: filter 0.5s ease;
  }
  .buyme img:hover {
    filter: grayscale(0%);
  }

  footer {
    display: flex;
    justify-content: space-around;
    align-items: center;
    background-color: #000000e0;
    color: white;
    padding: 2rem;
    position: relative;
  }
  .name {
    font-size: 1.5rem;
    color: #d1d1d1;
  }
  .social {
    margin-top: 1rem;
    margin-bottom: 0.5rem;
    display: flex;
    align-items: center;
  }
  .social a {
    background: #1a1a1a;
    padding: 10px;
    border-radius: 5px;
    margin-right: 1rem;
  }
  .social a:hover {
    background: #0d0d0d;
    /* color: var(--color-primary); */
  }
  .col {
    background: #0d0d0d66;
    padding: 1.8rem 14rem 1.8rem 2rem;
    border-radius: 20px;
  }
  .col,
  p {
    color: #8f8f8f;
  }
  /* -- --- --- selection  */
  h3::selection,
  p::selection,
  span::selection,
  a::selection {
    background-color: var(--color-secondary);
  }
  /* --- --- ---FIXME: responsive mobile */
  @media (max-width: 768px) {
    .footer {
      display: none;
    }
  }

  .line {
    height: 1px;
    background-color: #1e1e1e;
  }
</style>
