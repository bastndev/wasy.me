---
import { Icons } from "@/icon/icons";
---

<div class="container">
    <a class="flutter" href="/flutter">
        <Icons.Flutter className="icon" />
    </a>
    <a class="astro" href="/astro">
        <Icons.Astro className="icon" />
    </a>
</div>

<!-- MARK: Style -->
<style>
    .container {
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 100px;
        height: 300px;
        /* background-color: aqua; */
    }

    .flutter {
        margin: 0 10px;
        padding: 5px;
        border: 1px solid rgb(33, 33, 33);
        border-radius: 8px;
        transition:
            transform 0.5s ease,
            box-shadow 0.5s ease;
        margin-bottom: 2rem;
    }
    .flutter:hover {
        transform: translateY(-5px);
        border: none;
        box-shadow: 0 10px 20px rgba(0, 123, 255, 0.6);
    }
    .astro {
        margin: 0 10px;
        padding: 5px;
        border: 1px solid rgb(33, 33, 33);
        border-radius: 8px;
        transition:
            transform 0.5s ease,
            box-shadow 0.5s ease;
    }
    .astro:hover {
        transform: translateY(-5px);
        border: none;
        box-shadow: 0 10px 20px rgba(255, 68, 0, 0.6);
    }

    .icon {
        width: 1.5rem;
    }
</style>
