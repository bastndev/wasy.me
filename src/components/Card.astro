---
import { Icon } from "@/icons/Ui";
import { ALL } from "@/lib/data/index.ts";
---

<section
  class="grid grid-cols-1 my-16 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-x-8 gap-y-8"
>
  {
    ALL.map((index) => (
      <article class="article">
        <div class="copy">
          <a class="copyLink" href="#1">
            <Icon.Copy  />
          </a>
        </div>
        <div class="w-full p-[14px] rounded transition">
          <figure class="flex items-center justify-center">
            <img
              class="object-cover w-[50%] aspect-square rounded-[10px]"
              src={index.img}
            />
            <img
              class="absolute opacity-70 transform-gpu blur-lg -z-10 block object-cover w-[70%] aspect-square transition bg-white rounded-[10px]"
              src={index.img}
            />
          </figure>
        </div>
        <div class="flex justify-center items-center mb-5">
          <a
            class="text-[16px] font-bold text-left text-white"
            target="_blank"
            href={index.link}
          >
            {index.name}
          </a>
        </div>
      </article>
    ))
  }
</section>

<!-- MARK: style -->

<style>
  article {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 100%;
    transition: all 0.3s ease;
    background-color: black;
    border: 1px solid rgba(74, 74, 74, 0.4);
    border-radius: 10px;
    overflow: hidden;
  }

  article:hover {
    transform: scale(1.1);
  }
  .copy {
    width: 100%;
    height: 50px;
    /* background-color: ; */
    display: flex;
  }
  .copyLink {
    margin-left: auto;
    margin-right: 10px;
    margin-top: 10px;
    color: white;
  }
</style>
