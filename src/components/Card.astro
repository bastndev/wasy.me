---
import { ALL } from "@/lib/data/index.ts";
---

<section
  class="grid grid-cols-1 my-16 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-x-8 gap-y-8"
>
  {
    ALL.map((index) => (
      <article class="article">
        <a href={index.link} target="_blank" class="hover-link">
          <figure class="flex items-center justify-center ">
            <img
              class="object-cover w-[50%] aspect-square rounded-[10px]"
              src={index.img}
            />
            <img
              class="absolute opacity-70 transform-gpu blur-lg -z-10 block object-cover w-[70%] aspect-square transition bg-white rounded-[10px]"
              src={index.img}
            />
          </figure>

          <div class="flex justify-center items-center mt-6">
            <h2 class="text-[16px] font-bold text-left text-white/50 hover-text">
              {index.name}
            </h2>
          </div>
        </a>
      </article>
    ))
  }
</section>

<!-- MARK: style -->

<style>
  article {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 190px;
    transition: all 0.3s ease;
    background-color: black;
    border: 1px solid rgba(74, 74, 74, 0.4);
    border-radius: 10px;
    overflow: hidden;
  }

  article:hover {
    transform: scale(1.06);
  }

  .hover-link:hover .hover-text {
    color: white;
  }
</style>
