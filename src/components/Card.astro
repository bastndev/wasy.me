---
import { ALL } from "@/lib/data/index.ts";
---

<section
  class="grid grid-cols-1 my-16 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-x-8 gap-y-8"
>
  {
    ALL.map((index) => (
      <article class="hover:scale-105">
        <a href={index.link} target="_blank" class="index-link">
          <figure class="flex items-center justify-center">
            <img
              class="object-cover w-[50%] aspect-square rounded-[10px]"
              src={index.img}
              alt={index.name}
            />
            <img
              class="absolute opacity-70 transform-gpu blur-lg -z-10 block object-cover w-[70%] aspect-square transition bg-white rounded-[10px]"
              src={index.img}
              alt={index.name}
            />
          </figure>

          <div class="flex justify-center items-center mt-6">
            <h2 class="text-[16px] font-bold text-left text-white/50 hover-text">
              {index.name}
            </h2>
          </div>
        </a>
      </article>
    ))
  }
</section>

<!-- MARK: style -->

<style>
  article {
    position: relative;
    display: flex;
    align-items: center;
    width: 100%;
    height: 195px;
    transition: all 0.8s ease;
    background-color: black;
    border: 1px solid #41414166;
    border-radius: 10px;
    overflow: hidden;
  }
  .index-link:hover .hover-text {
    color: white;
  }
  /* --- --- --- Animation  */
</style>
